
<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row  mt-3">
    <div class="col-8 offset-2">
       
    <h3>Create a new listing:</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">

      <div class = "mb-3">
        <label for = "title" class = "form-lebel"> Title </label>
        <input name = "listing[title]"  placeholder = "Enter Your Title" type = "text"  class = "form-control"   required>
        <div class = "valid-feedback">
          title looks good!
        </div>
      </div>


      <div class = "mb-3">
        <lebel for = "description" class = "form-label"> Description: </lebel>
        <textarea name = "listing[description]" class = "form-control"id= "description" required></textarea>
        <div class = "invalid-feedback"> Description should be valid </div>
      </div>

      <div class="mb-3">
        <lebel for="image" class="form-label">Image:</lebel>
        <input type="text"  class="form-control" name="listing[image]" id="image" placeholder="image/url">
        

      </div>
      <div class="row">
       <div class="mb-3 col-md-4">
          <lebel for="country" class="form-label">country:</lebel>
          <input type="text" name="listing[country]" class="form-control" id="country" placeholder="Enter Country" required>
          <div class="invalid-feedback">Country should be valid</div>
         </div>

         <div class="mb-3 col-md-7">
          <lebel for="price" class="form-label">price:</lebel>
          <input type="text" class="form-control"name="listing[price]"id="price" placeholder="Enter Your Price" required>
          <div class="invalid-feedback">Price should be valid</div>
         </div>
    
         
      </div> 
        
      
       <div class="mb-3">
        <lebel for="location" class="form-label">Location:</lebel>
        <input type="text" name="listing[location]" class="form-control" id="location" placeholder="Enter Your Location" required>
        <div class="invalid-feedback">Location should be valid</div>
       </div>
    
       <button class="btn btn-dark add-btn mb-3">Add</button>
      <br>
      

    </form>
    </div>
    </div>
 
</body>
