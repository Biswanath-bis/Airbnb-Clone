
<% layout("/layouts/boilerplate") -%>
<body>
 
    <div class="row">
      <div class="col-8 offset-2 mt-3">
        <h3>Listing Details</h3>
      </div>

    <div class="card col-6 offset-2"  >
      <img src="<%=list.image %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %></b><br>
          <%= list.description %><br>
          <%= list.location %><br>
          &#8377;<%= list.price.toLocaleString("en-IN") %><br>
        </p>
        
      </div>
    </div>
   <div class="btns offset-2">
   <a href="/listings/<%=list._id %>/edit" class="btn btn-dark add-btn col-1 ">Edit</a>
    
   <form method="POST" action="/listings/<%=list._id%>?_method=DELETE">
    <button class="btn btn-dark   col offset-4 ">Delete</button> 
   </form>
   </div>
   </div>
     
</body>
   