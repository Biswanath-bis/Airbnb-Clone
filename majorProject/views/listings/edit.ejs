
<% layout("/layouts/boilerplate") -%>
<body>
    
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
          <div class="row mt-3" >
            <div class="col-8 offset-2">

          <div class="mb-3">
            <lebel for="title" class="form-label"> Title</lebel>
            <input type="text"class="form-control"  name="listing[title]" value="<%= listing.title %>" required>
            <div class="valid-feedback">title looks good!</div>
          </div>

          <div class="mb-3">
            <lebel for="description" class="form-label"> Description</lebel>
            <textarea name="listing[description]"class="form-control"  required>"<%= listing.description %>"</textarea>
            <div class="invalid-feedback">Description should be valid</div>
          </div>

          <div class="mb-3">
            <lebel for="image" class="form-label"> Image</lebel>
            <input type="text"class="form-control"  name="listing[image]" value=<%= listing.image %> required>
            <div class="invalid-feedback">Image should be valid</div>
            
          </div>

          
          <div class="row">
            <div class="mb-3 col-md-4">
              <lebel for="titlt" class="form-label"> price</lebel>
              <input type="text" class="form-control"  name="listing[price]" value="<%= listing.price %>" required>
              <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="mb-3 col-md-8">
              <lebel for="country" class="form-label"> Country</lebel>
              <input type="text"class="form-control"  name="listing[country]" value="<%= listing.country %>" required>
              <div class="invalid-feedback">Country should be valid</div>
            </div>

          </div>
         
          <div class="mb-3">
            <lebel for="location" class="form-label"> location</lebel>
            <input type="text"class="form-control"  name="listing[location]" value="<%= listing.location %>" required>
            <div class="invalid-feedback">Location  should be valid</div>
          </div>
          
          <button class="btn btn-dark add-btn">edit</button>
          <br>
          </form>
          </div>
          </div>
    
    
</body>
